{{!-- Create a table --}}
<table>
  {{!-- Header Section --}}
	<thead>
    {{!-- For just the first row, we print each key of the row object as a header cell so we know what each column menas when the page renders --}}
		<tr>
      <th><a href="">New</a></th>
      <th></th>
			{{#each data.[0]}}
			<th>
				{{@key}}
			</th>
			{{/each}}	
		</tr>
	</thead>
  {{!-- Body section --}}
	<tbody>
    {{!-- For each row, print the keys and attributes --}}
		{{#each data}}
		<tr>
      <td class="edit-link">Edit</td>
      <td class="delete-link">Delete</td>
			<td>{{this.character_id}}</td>
			<td>{{this.player_id}}</td>
			<td>{{this.name}}</td>
			<td>{{this.level}}</td>
			<td>{{this.experience}}</td>
			<td>{{this.agility}}</td>
			<td>{{this.strength}}</td>
			<td>{{this.magic}}</td>
			<td>{{this.health}}</td>
		</tr>
    {{/each}}
	</tbody>
</table>
<div class="form-container">
  {{!-- Form to add a record to the table --}}
  <form class="add-entity-form" id="add-character-form">
    <fieldset>
      <legend>Add a Character</legend>
      <label for="input-player-id">Player ID: </label>
      <select name="input-player-id" id="input-player-id">
        <option value="">Select a Player</option>
        {{#each players}}
        <option value="{{this.player_id}}">{{this.player_id}} ({{this.username}})</option>
        {{/each}}
      </select>
      
      <label for="input-character-name">Character Name: </label>
      <input type="text" name="input-character-name" id="input-character-name"/>
      
      <label for="input-character-level">Level: </label>
      <input type="number" name="input-character-level" id="input-character-level" min="0" max="100"/>
      
      <label for="input-character-experience">Experience Points: </label>
      <input type="number" name="input-character-experience" id="input-character-experience" min="0" max="100000"/>
      
      <label for="input-character-agility">Agility Points: </label>
      <input type="number" name="input-character-agility" id="input-character-agility" min="0" max="100"/>
      
      <label for="input-character-strength">Strengh Points: </label>
      <input type="number" name="input-character-strength" id="input-character-strength" min="0" max="100"/>
      
      <label for="input-character-magic">Magic Points: </label>
      <input type="number" name="input-character-magic" id="input-character-magic" min="0" max="100"/>
      
      <label for="input-character-health">Health Points: </label>
      <input type="number" name="input-character-health" id="input-character-health" min="0" max="100"/>

      <input type="submit"/> 
    </fieldset>
  </form>
  {{!-- Form to update a record from the table --}}
  <form class="update-entity-form" id="update-character-form">
    <fieldset>
      <legend>Update a Character</legend>
      <label for="input-player-id">Player ID: </label>
      <select name="input-player-id" id="input-player-id">
        <option value="">Select a Player</option>
        {{#each players}}
        <option value="{{this.player_id}}">{{this.player_id}} ({{this.username}})</option>
        {{/each}}
      </select>
      
      <label for="input-character-name">Character Name: </label>
      <input type="text" name="input-character-name" id="input-character-name"/>
      
      <label for="input-character-level">Level: </label>
      <input type="number" name="input-character-level" id="input-character-level" min="0" max="100"/>
      
      <label for="input-character-experience">Experience Points: </label>
      <input type="number" name="input-character-experience" id="input-character-experience" min="0" max="100000"/>
      
      <label for="input-character-agility">Agility Points: </label>
      <input type="number" name="input-character-agility" id="input-character-agility" min="0" max="100"/>
      
      <label for="input-character-strength">Strengh Points: </label>
      <input type="number" name="input-character-strength" id="input-character-strength" min="0" max="100"/>
      
      <label for="input-character-magic">Magic Points: </label>
      <input type="number" name="input-character-magic" id="input-character-magic" min="0" max="100"/>
      
      <label for="input-character-health">Health Points: </label>
      <input type="number" name="input-character-health" id="input-character-health" min="0" max="100"/>

      <input type="submit"/> 
    </fieldset>
  </form>
  <form class="delete-entity-form" id="delete-character-form">
    <fieldset>
    </fieldset>
  </form>
</div>
<script src="./js/add_character.js"></script>
<script src="./js/update_character.js"></script>
<script src="./js/delete_character.js"></script>

